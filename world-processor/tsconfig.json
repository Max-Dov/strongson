{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2021",
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@validators/*": ["src/validators/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}